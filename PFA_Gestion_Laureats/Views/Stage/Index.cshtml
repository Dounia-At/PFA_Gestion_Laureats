@model IList<PFA_Gestion_Laureats.Models.Stage>

@{
    ViewData["Title"] = "Stages";
}


<div class="card card-action mb-4">
    <div class="d-flex justify-content-between">
        <div class="card-header ">
            <h5 class="card-action-title mb-0">Stages</h5>

        </div>

        @if (Convert.ToString(Context.Response.HttpContext.Session.GetString("Login")) == ViewBag.login)
        {

            <a asp-controller="Stage" asp-action="Add" class="btn btn-outline-primary  waves-effect waves-light mb-2 mt-3  mx-2">

                <i class="ti ti-plus me-1"></i>




            </a>


        }
    </div>

    <div class="card-body">
        <div class="card-action-element">
            <div class="card-body pb-0">
                <ul class="timeline ms-1 mb-0">
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (Stage s in Model)
                        {

                            <li class="timeline-item timeline-item-transparent">
                                <span class="timeline-point timeline-point-danger"></span>
                                <div class="timeline-event">
                                    <div class="timeline-header">
                                        <a asp-controller="Stage" asp-action="Update" asp-route-id="@s.Id"><h6 class="mb-0">@s.Intitulé_poste</h6></a>
                                        @*<strong>@s.entreprise.Nom</strong>*@
                                        <small class="text-muted">
                                            @{
                                                int mois = (int)(new TimeSpan(s.Date_Fin.Ticks - s.Date_Debut.Ticks).TotalDays / 30); ;
                                            }<span>@mois mois </span>
                                        </small>
                                    </div>
                                    <div>
                                        <p>@s.entreprise.Nom</p>
                                        <p class="mb-2 text-muted">@s.Date_Debut.Date.ToString("MM/dd/yyyy") -- @s.Date_Fin.Date.ToString("MM/dd/yyyy")</p>
                                    </div>

                                    <div class="d-flex flex-wrap">

                                        <div class="ms-1">
                                            <p class="mx-3 my-2">@Html.Raw(s.Description)</p>
                                        </div>
                                    </div>
                                </div>
                            </li>


                        }
                    }
                    else
                    {
                        <h3>Aucun Stage!</h3>
                    }
                </ul>
                
            </div>
        </div>
    </div>



</div>


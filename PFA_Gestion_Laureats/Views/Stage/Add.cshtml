@model PFA_Gestion_Laureats.ViewModels.Stages.AddStageViewModel
@section title {
   Nouveau Stage
}

@section js{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/smoothness/jquery-ui.css" />
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.min.js"></script>
   
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Name").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Stage/GetSearchResults/",
                        type: "POST",
                        dataType: "json",
                        data: { Prefix: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))

                        }
                    })
                },
                messages: {
                    noResults: "", results: ""
                }
            });
        })
    </script>
   
    
   
 
   
    <script>



        var editor = new FroalaEditor('#example', {
            imageUpload: false,
            imageInsertButtons: false,
            videoInsertButtons: false,
            fileInsertButtons: false,
            fileUpload: false,
        }, function () {



            editor.imageUpload.hide();

        })
    </script>




}
<h4 class="fw-bold py-3 mb-4 card-header"><a class="text-muted fw-light" asp-controller="Annonce" asp-action="Annonces">Accueil /</a>  Nouveau Stage</h4>
<div >

    <div class="col-12">
        <div class="card">

            <div class="card-body">
                <form id="formValidationExamples" class="row g-3" method="post">
                   

                    <div class="col-12">
                        <h5 class="fw-semibold">Nouveau Stage</h5>
                        <hr class="mt-0" />
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Intitulé_poste" class="form-label">Intitulé de poste <strong style="color:red">*</strong></label>
                        <input class="form-control" asp-for="Intitulé_poste" placeholder="Ex:Chef des Ventes" required />
                        <span asp-validation-for="Intitulé_poste"></span>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label" asp-for="Entreprise">Entreprise<strong style="color:red">*</strong></label>
                        <input class="form-control" id="Name"  asp-for="Entreprise" required />
                        <span asp-validation-for="Entreprise"></span>
                    </div>
                   

                       


                    <div class="col-md-12 mt-3">
                        <label for="formValidationFile" class="form-label">Description <strong style="color:red">*</strong></label>
                        <textarea id="example" asp-for="Description"></textarea>

                    </div>



                    <div class="col-12 mt-3">
                        <label asp-for="Date_Debut" class="form-label">Date de dèbut <strong style="color:red">*</strong></label>
                        <input class="form-control" asp-for="Date_Debut" type="date" required />
                        <span asp-validation-for="Date_Debut"></span>
                    </div>
                    <div class="col-12 mt-3">
                        <label asp-for="Date_Fin" class="form-label">Date de fin <strong style="color:red">*</strong></label>
                        <input class="form-control" asp-for="Date_Fin" type="date" />
                        <span asp-validation-for="Date_Fin" style="color:red"></span>
                    </div>

                    <div class="col-12">

                        <button type="submit" name="submitButton" class="btn btn-success btn-submit waves-effect waves-light">Ajouter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /FormValidation -->
</div>

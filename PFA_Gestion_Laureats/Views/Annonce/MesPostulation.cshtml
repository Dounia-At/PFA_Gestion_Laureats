@model List<Postulation>
@section title {
   Mes Postulations
}
@if (Model != null)
{
    <h4 class="fw-bold py-3 mb-4 card-header"><a class="text-muted fw-light" asp-controller="Annonce" asp-action="Annonces">Accueil /</a>  Mes Postulations</h4>
    <!-- Tests Cards -->
    <div class="row g-4 mt-2">

        @foreach (Postulation postulation in Model)
        {
            <div class="col-xl-4 col-lg-6 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <a asp-controller="Entreprise" asp-action="Details" asp-route-id="@postulation.Annonce.EntrepriseId" class="d-flex align-items-center">
                                <div class="avatar me-2">
                                    <img src="../../assets/img/logo/@postulation.Annonce.entreprise.Logo"
                                         alt="Logo"
                                         class="rounded-circle" />
                                </div>
                                <div class="me-2 text-body h5 mb-0">@postulation.Annonce.entreprise.Nom</div>
                            </a>

                        </div>
                        <div class="mb-3">
                            @if (postulation.Annonce.Titre.Length > 30)
                            {
                                <a asp-controller="Annonce" asp-action="Details" asp-route-id="@postulation.Annonce.Id">
                                    <h5 class="card-title mx-3 my-4 ">@postulation.Annonce.Titre.Substring(0,26)...</h5>
                                </a>

                            }
                            else
                            {
                                <a asp-controller="Annonce" asp-action="Details" asp-route-id="@postulation.Annonce.Id">
                                    <h5 class="card-title mx-3 my-4 ">@postulation.Annonce.Titre</h5>
                                </a>



                            }

                            <hr class="my-1" /> <br />
                        </div>
                       
                            <div class="d-flex align-items-center pt-1">

                            <a asp-controller="User" asp-action="Details" asp-route-id="@postulation.Annonce.utilisateur.Login" class="d-flex align-items-center">
                                <img src="../../assets/img/avatars/@postulation.Annonce.utilisateur.Photo_Profil" class="rounded-circle me-3" alt="avatar" height="24" width="24">

                                <p class=" mt-3 text-muted ">


                                    @postulation.Annonce.utilisateur.Nom @postulation.Annonce.utilisateur.Prenom
                                </p>


                            </a>
                                <div class="ms-auto">
                                    <p class=" mt-3 text-muted ">


                                       @postulation.Date_Postulation
                                    </p>
                                </div>
                            </div>
                        

                    </div>
                </div>
            </div>
        }

    </div>
    <!--/ Tests Cards -->
}
else
{
    <div class="container">
        <h3>Aucun Test pour le moment!!</h3>
    </div>
}
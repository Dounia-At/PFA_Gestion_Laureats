@model PFA_Gestion_Laureats.ViewModels.UserViewModel

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Modification du Profil /</span> Profil</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-4">
            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Update_Compte" ><i class="ti-xs ti ti-users me-1"></i> Compte</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Update_Securite" ><i class="ti-xs ti ti-lock me-1"></i> Securité</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="javascript:void(0);"><i class="ti-xs ti ti-photo-edit me-1"></i> Profil</a>
            </li>
        </ul>
        <div class="card mb-4">
            <h5 class="card-header">@Model.Nom @Model.Prenom</h5>
            <!-- Account -->
            <form method="POST" enctype="multipart/form-data">

                <div class="card-body">

                    <div class="row">


                        <div class="mb-3 col-md-6">       
                            <img src="../../assets/img/avatars/@Model.URL_Photo_Profil"
                                     alt="user-avatar"
                                     class="d-block w-px-100 h-px-100 rounded"
                                     id="uploadedAvatar" />
                              
                            </div>
                        <hr class="my-0" />
                        <br /> <br />
                        <div class="mb-3 col-md-6">                           
                            <input type="file"
                                   class="form-control"
                                   asp-for="Photo" required />                            
                        </div>


                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">Modifier</button>
                        <button type="button" asp-controller="Home" asp-action="Index"  class="btn btn-label-secondary">Cancel</button>
                    </div>

                </div>
            </form>
            <!-- /Account -->
        </div>

    </div>
</div>

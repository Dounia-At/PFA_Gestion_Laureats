@{
    ViewData["Title"] = "Importer des Utilisateurs";
}

<div class="card mb-4">
    <h5 class="card-header">Importer des Utilisateurs</h5>
    <form asp-action="ImportUsers" enctype="multipart/form-data">
        <div class="card-body">

            <div class="row">
                <div class="form-group mb-3 col-md-6">
                    <label for="file" class="mb-3">CSV File</label>
                    <input type="file" id="file" name="file" class="form-control form-control-file" accept=".csv" required>
                </div>

            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Import</button>
            </div>

        </div>
    </form>
</div>

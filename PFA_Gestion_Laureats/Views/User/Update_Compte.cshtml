@model PFA_Gestion_Laureats.ViewModels.Users.UserViewModel

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Modification du Profil /</span> Compte</h4>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-pills flex-column flex-md-row mb-4">
            <li class="nav-item">
                <a class="nav-link active" href="javascript:void(0);"><i class="ti-xs ti ti-users me-1"></i> Compte</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Update_Securite" ><i class="ti-xs ti ti-lock me-1"></i> Securité</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="Update_Picture"><i class="ti-xs ti ti-photo-edit me-1"></i> Profil</a>
            </li>
        </ul>
        <div class="card mb-4">
            <h5 class="card-header">@Model.Nom @Model.Prenom</h5>
            <!-- Account -->
            <form method="POST" >

               
                <hr class="my-0" />
               
                <div class="card-body">

                    <div class="row">
                        
                        <div class="mb-3 col-md-6">
                            <label asp-for="Titre_Profil" class="form-label"></label>
                            <input class="form-control" asp-for="Titre_Profil" required />
                            <span asp-validation-for="Titre_Profil"></span>
                        </div>

                       
                        <div class="mb-3 col-md-6">
                            <label asp-for="Tel" class="form-label"></label>
                            <input class="form-control" type="tel" asp-for="Tel" required />
                            <span asp-validation-for="Tel"></span>
                        </div>

                        <div class="mb-3 col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input class="form-control" type="email" asp-for="Email" required />
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="mb-3 col-md-6">
                            <label asp-for="Adresse" class="form-label"></label>
                            <input class="form-control" asp-for="Adresse" required />
                            <span asp-validation-for="Adresse"></span>
                        </div>

                        <hr class="my-0" />



                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">Modifier</button>
                    </div>

                </div>
            </form>
            <!-- /Account -->
        </div>

    </div>
</div>

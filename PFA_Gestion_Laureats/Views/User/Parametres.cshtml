@section title {
   Settings
}
@model PFA_Gestion_Laureats.ViewModels.Users.UserViewModel


    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Settings</span> </h4>

    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills flex-column flex-md-row mb-4">
                <li class="nav-item">
                    <button class="nav-link active" id="compte" ><i class="ti-xs ti ti-users me-1"></i> Compte</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="securite"><i class="ti-xs ti ti-lock me-1"></i> Securité</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="profil"><i class="ti-xs ti ti-photo-edit me-1"></i> Profil</button>
                </li>
            </ul>
            <div class="card mb-4">
                <h5 class="card-header">@Model.Nom @Model.Prenom</h5>
            <hr class="my-0" />

            @if (ViewBag.msgValidation != null)
            {
                <div class="alert alert-warning alert-dismissible fade show">
                    <strong>Attention!</strong> @ViewBag.msgValidation
                </div>
            }
            <div id="form1">
                <form method="POST" asp-action="Update_Compte">


                    <div class="card-body">

                        <div class="row">

                            <div class="mb-3 col-md-6">
                                <label asp-for="Titre_Profil" class="form-label"></label>
                                <input class="form-control" asp-for="Titre_Profil" required />
                                <span asp-validation-for="Titre_Profil"></span>
                            </div>


                            <div class="mb-3 col-md-6">
                                <label asp-for="Tel" class="form-label"></label>
                                <input class="form-control" type="tel" asp-for="Tel" required />
                                <span asp-validation-for="Tel"></span>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input class="form-control" type="email" asp-for="Email" required />
                                <span asp-validation-for="Email"></span>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label asp-for="Adresse" class="form-label"></label>
                                <input class="form-control" asp-for="Adresse" required />
                                <span asp-validation-for="Adresse"></span>
                            </div>

                            <hr class="my-0" />



                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Modifier</button>
                        </div>

                    </div>
                </form>
            </div>
            <div id="form2">
                


                <form method="POST" asp-action="Update_Securite">
                    <div class="card-body">
                    <div class="row">
                        <div class="mb-3 col-md-6 form-password-toggle">
                            <label class="form-label" for="currentPassword">Mot de passe Actuel</label>
                            <div class="input-group input-group-merge">
                                <input asp-for="CurrentPassword" required
                                       class="form-control"
                                       type="password"
                                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                                <span class="input-group-text cursor-pointer"><i class="ti ti-eye-off"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-6 form-password-toggle">
                            <label class="form-label" for="newPassword">Nouveau mot de passe</label>
                            <div class="input-group input-group-merge">
                                <input class="form-control"
                                       asp-for="Password" required
                                       type="password"
                                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                                <span class="input-group-text cursor-pointer"><i class="ti ti-eye-off"></i></span>
                            </div>
                        </div>

                        <div class="mb-3 col-md-6 form-password-toggle">
                            <label class="form-label" for="confirmPassword">Confirmer le mot de passe</label>
                            <div class="input-group input-group-merge">
                                <input asp-for="ConfirmationPassword"
                                       class="form-control" required
                                       type="password"
                                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                                <span class="input-group-text cursor-pointer"><i class="ti ti-eye-off"></i></span>
                            </div>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary me-2">Modifier</button>
                        </div>
                    </div>
                    </div>
                </form>
            </div>
            <div id="form3">
                <form method="POST" asp-action="Update_Picture" enctype="multipart/form-data">

                    <div class="card-body">

                        <div class="row">


                            <div class="mb-3 col-md-6">
                                <img src="../../assets/img/avatars/@Model.URL_Photo_Profil"
                                     alt="user-avatar"
                                     class="d-block w-px-100 h-px-100 rounded"
                                     id="img" />

                            </div>
                            <hr class="my-0" />
                            <br /> <br />
                            <div class="mb-3 col-md-6">
                                <input type="file" id="input"
                                       class="form-control"
                                       asp-for="Photo" required />
                            </div>


                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Modifier</button>
                        </div>

                    </div>
                </form>
            </div>
            </div>

        </div>
    </div>


@section js {
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <link href="~/css/jquery-ui.css" rel="stylesheet" />
    <script src="~/js/jquery-ui.min.js"></script>
    <script>
        $(document).ready(function () {

            showForm("form1");
            $("#compte").click(function () {
                showForm("form1");
                setActiveButton("#compte");
            });

            $("#securite").click(function () {
                showForm("form2");
                setActiveButton("#securite");
            });

            $("#profil").click(function () {
                showForm("form3");
                setActiveButton("#profil");
            });

            function showForm(formId) {
                // Hide all forms
                $("#form1").hide();
                $("#form2").hide();
                $("#form3").hide();

                // Show the selected form
                $("#" + formId).show();
            }
            function setActiveButton(buttonId) {
                $(".nav-link").removeClass("active");
                $(buttonId).addClass("active");
            }
        });
    </script>
    <script>
        let img = document.getElementById('img');
        let input = document.getElementById('input');

        input.onchange = (e) => {
            if (input.files[0])
                img.src = URL.createObjectURL(input.files[0]);
        };
    </script>
}
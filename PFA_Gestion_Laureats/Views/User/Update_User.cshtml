@section title {
   Modier Utilisateur
}
@model PFA_Gestion_Laureats.ViewModels.Users.UserViewModel

<div class="container-xl">
    <!-- Left Text -->

    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-4">
            <div class="authentication-inner row">
                
                <div class="d-none d-lg-flex col-lg-4 align-items-center justify-content-center p-5 auth-cover-bg-color position-relative ">



                    <B>Modifier User @Model.Login</B>
                </div>
            </div>
            @if (ViewBag.msgValidation != null)
            {
                <div class="alert alert-warning alert-dismissible fade show">
                    <strong>Attention!</strong> @ViewBag.msgValidation
                </div>
            }
            <form method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="Nom" class="form-label"></label>
                        <input type="text"
                               asp-for="Nom"
                               class="form-control"
                               placeholder="Saisir votre nom" required />
                        <span asp-validation-for="Nom"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="Prenom" class="form-label"></label>
                        <input type="text"
                               asp-for="Prenom"
                               class="form-control"
                               placeholder="Saisir votre prenom" required />
                        <span asp-validation-for="Prenom"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Titre_Profil" class="form-label"></label>
                        <input type="text"
                               asp-for="Titre_Profil"
                               class="form-control "
                               placeholder="Titre_Profil" required />
                        <span asp-validation-for="Titre_Profil"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="email"
                               asp-for="Email"
                               class="form-control"
                               placeholder="XXXX@email.com" required />
                        <span asp-validation-for="Email"></span>
                    </div>

                    @if(Model.date_Inscription != null)
                    {
                        <div class="col-sm-6">
                            <label asp-for="date_Inscription" class="form-label"></label>
                            <input type="date"
                               asp-for="date_Inscription"
                                   class="form-control" required />
                            <span asp-validation-for="date_Inscription"></span>
                        </div>
                    }

                    @if(Model.Date_Fin_Etude != null)
                    {
                        <div class="col-sm-6">
                            <label asp-for="Date_Fin_Etude" class="form-label"></label>
                            <input type="date"
                               asp-for="Date_Fin_Etude"
                                   class="form-control" required />
                            <span asp-validation-for="Date_Fin_Etude"></span>
                        </div>
                    }
                    @if(Model.specialite != null)
                    {
                        <div class="col-sm-6">
                            <label asp-for="specialite" class="form-label"></label>
                            <input type="text"
                               asp-for="specialite"
                                   class="form-control"
                                   placeholder="Saisir Votre specialte" required />
                            <span asp-validation-for="specialite"></span>
                        </div>
                    }

                    <div class="col-sm-6">
                        <label asp-for="Tel" class="form-label"></label>

                        <input type="tel"
                               asp-for="Tel"
                               class="form-control" required />
                        <span asp-validation-for="Tel"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Adresse" class="form-label"></label>
                        <input type="text"
                               asp-for="Adresse"
                               class="form-control" required />
                        <span asp-validation-for="Adresse"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Login" class="form-label"></label>
                        <input type="text"
                               asp-for="Login"
                               class="form-control"
                               placeholder="Saisir votre Indetifiant" required />
                        <span asp-validation-for="Login"></span>
                    </div>
                   
                    <div>
                        <button type="submit" class="btn btn-primary me-2">Modifier</button>
                    </div>




                </div>
            </form>


        </div>
    </div>
</div>
